pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE_NAME = 'my-image'
        DOCKER_TAG = 'latest'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/parthshah0210/BasicWeb.git', branch: 'main'
                echo 'Code checkout success'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE_NAME}:${DOCKER_TAG}")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Build Docker image again (not necessary if already built in previous stage)
                    sh 'docker build -t ${DOCKER_IMAGE_NAME}:${DOCKER_TAG} .'
                    // Run Docker container
                    sh 'docker run -d -p 80:80 ${DOCKER_IMAGE_NAME}:${DOCKER_TAG}'
                }
            }
        }
    }
}
