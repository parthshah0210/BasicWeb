pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE_NAME = 'my-image'
        DOCKER_TAG = 'latest'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/parthshah0210/BasicWeb.git', branch: 'main'
                echo 'Code checkout success'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE_NAME}:${DOCKER_TAG}")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker container with port mapping
                    docker.image("${DOCKER_IMAGE_NAME}:${DOCKER_TAG}").run('-d -p 80:80')
                }
            }
        }

        stage('Post Execution') {
            steps {
                script {
                    // Stopping the container first
                    def container = docker.ps("-q --filter ancestor=${DOCKER_IMAGE_NAME}:${DOCKER_TAG}")
                    if (container) {
                        // If a container exists, stop it
                        docker.container(container).stop()
                        // Optionally remove the container
                        docker.container(container).remove()
                    }
                }
            }
        }
    }

    post {
        always {
            // Remove the image after everything is done
            docker.image("${DOCKER_IMAGE_NAME}:${DOCKER_TAG}").remove()
        }
    }
}
