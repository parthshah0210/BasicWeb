pipeline {
    agent any
    
   environment {
        DOCKER_IMAGE_NAME = 'my-image'
        DOCKER_TAG = 'latest'
        SONAR_HOST_URL = 'http://127.0.0.1:9000'       // Update with your SonarQube URL
        SONAR_PROJECT_KEY = 'my-project'              // Update with your SonarQube project key
        SONAR_TOKEN = credentials('sonarqube')  // Add SonarQube token in Jenkins credentials
    }

    
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/parthshah0210/BasicWeb.git', branch: 'main'
                echo 'Code checkout success'
            }
        }

      //   stage('SonarQube Analysis') {
      //       steps {
        //        script {
          //          withSonarQubeEnv('sonarqube') { // 'SonarQube' should match the name in Jenkins SonarQube configuration
            //            sh """
              //          sonar-scanner \
                //        -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                  //      -Dsonar.sources=. \
                    //    -Dsonar.host.url=${SONAR_HOST_URL} \
                      //  -Dsonar.login=${SONAR_TOKEN}
                      //  """
                //    }
              //  }
          //  }
     //   }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE_NAME}:${DOCKER_TAG}")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Build Docker image again (not necessary if already built in previous stage)
                    sh 'docker build -t ${DOCKER_IMAGE_NAME}:${DOCKER_TAG} .'
                    // Run Docker container
                    sh 'docker run -d -p 80:80 ${DOCKER_IMAGE_NAME}:${DOCKER_TAG}'
                }
            }
        }
    }
}
