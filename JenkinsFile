pipeline {
    agent any

        environment {
        DOCKER_IMAGE_NAME = 'my-image'  // Name of the Docker image
        DOCKER_TAG = 'latest'           // Docker image tag
    }
    stages {
        stage('checkout') {
            steps {
                git url: "https://github.com/parthshah0210/BasicWeb.git", branch: 'main'
                echo 'code checkout success'
            }
        }
       stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image from Dockerfile in the repository
                    docker.build("${DOCKER_IMAGE_NAME}:${DOCKER_TAG}")
                }
            }
        }
        
        stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker container (e.g., run a test or the application)
                    docker.image("${DOCKER_IMAGE_NAME}:${DOCKER_TAG}").run('-d')
                }
            }
        }

        stage('Post Execution') {
            steps {
                script {
                    // Optionally remove the container if not needed anymore
                    docker.image("${DOCKER_IMAGE_NAME}:${DOCKER_TAG}").stop()
                }
            }
        }
    }
    
    post {
        always {
            // Clean up the Docker image after the pipeline completes
            docker.image("${DOCKER_IMAGE_NAME}:${DOCKER_TAG}").remove()
        }
    }
}
            }
        }
    }
}
