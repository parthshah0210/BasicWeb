pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE_NAME = 'my-image'
        DOCKER_TAG = 'latest'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/parthshah0210/BasicWeb.git', branch: 'main'
                echo 'Code checkout success'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE_NAME}:${DOCKER_TAG}")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh ' docker build ("${DOCKER_IMAGE_NAME}") -t ("${DOCKER_TAG}") '
                    sh ' docker run -d -p 80:80 ("${DOCKER_TAG}") '
                }
            }
        }
}
